{

    "manifest_version": 2,
    "name": "CURIA",
    "version": "1.0",
  
    "description": "CURIA ist eine sehr gute Anwendung, die im Browser Erklärungen für politische Fachwörter anzeigt.",
  
    "icons": {
      "48": "icons/border-48.png"
    },

    "background": {
      "scripts": ["background.js"]
    },

    

    "browser_action": {
      "default_icon": "icons/border-32.png",
      "default_title": "CURIA",
      "default_popup": "curia.html"
    },

    "permissions": [
      "<all_urls>",
      "activeTab",
      "contextMenus"
    ]
  
  }